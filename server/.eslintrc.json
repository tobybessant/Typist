{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", "tab"],
        "space-before-function-paren": 0,
        "no-tabs": 0,
        "padded-blocks": 0
    },
    "ignorePatterns": "test/"
}